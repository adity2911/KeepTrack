<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TakeNote"
    android:background="@color/navy_b">

   <com.google.android.material.textfield.TextInputEditText
       android:id="@+id/input"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:hint="@string/title"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       android:textColor="@color/white"
       android:textColorHint="@color/Blue600"
       android:backgroundTint="@color/navy_c"
       android:textSize="24sp"
       android:layout_marginTop="20dp"
       android:layout_marginLeft="5dp"
       android:layout_marginRight="5dp"/>
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/noteInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/note"
        app:layout_constraintStart_toStartOf="@+id/input"
        app:layout_constraintTop_toBottomOf="@id/input"
        android:textColor="@color/white"
        android:textColorHint="@color/Blue600"
        android:textSize="20sp"
        android:backgroundTint="@color/navy_b"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="20dp"
        android:text="@string/save"
        android:src="@drawable/ic_baseline_save_24w"
        app:tint="@color/navy_a"
        app:backgroundTint="@color/pink" />

</androidx.constraintlayout.widget.ConstraintLayout>